<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
						  http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd" start-state="mainInfo">


    <view-state id="changeSearchCriteria" view="enterSearchCriteria.xhtml" popup="true">
        <on-entry>
            <render fragments="hotelSearchForm" />
        </on-entry>
        <transition on="search" to="reviewHotels">
            <evaluate expression="searchCriteria.resetPage()"/>
        </transition>
    </view-state>

    <!--<view-state id="mainInfo" view="main_info.jsp">-->
        <!--<transition on="next" to="paySchedule"/>-->
    <!--</view-state>-->

    <view-state id="paySchedule" view="pay_schedule.jsp"/>
    <view-state id="contractSubject" view="contract_subject.jsp"/>
    <view-state id="contractorInfo" view="contractor_info.jsp"/>
    <view-state id="docs" view="docs.jsp"/>


</flow>